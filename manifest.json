{
  "manifest_version": 3,
  "name": "ChatGPT++",
  "version": "2.1.9",
  "description": "Enhance your ChatGPT experience with ChatGPT Plus appearance.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["index.js"],
      "run_at": "document_idle"
    }
  ]
}
